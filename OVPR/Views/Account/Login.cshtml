@using OVPR.Models.AccountViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model LoginViewModel

@{
    ViewData["Title"] = "OVPR Log in";
}
 
<h2>@ViewData["Title"]</h2>
<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

    <hr />
    @ViewData["ReturnUrl"]
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="LoginHandle">Login Handle</label>
        <input asp-for="LoginHandle" class="form-control" />
        <span asp-validation-for="LoginHandle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">Log in</button>
    </div>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
